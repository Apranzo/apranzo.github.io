<div style="position:absolute;left:36.72px;top:459.30px" class="cls_015"><span class="cls_015">INTO </span><span class="cls_051">v</span><span class="cls_015">ING</span></div>
<div style="position:absolute;left:144.75px;top:459.30px" class="cls_015"><span class="cls_015">into </span><span class="cls_051">n/op v</span><span class="cls_015">ing</span></div>
<div style="position:absolute;left:311.21px;top:459.30px" class="cls_015"><span class="cls_015">into </span><span class="cls_051">n/op</span><span class="cls_015"> not </span><span class="cls_051">v</span><span class="cls_015">ing</span></div>
