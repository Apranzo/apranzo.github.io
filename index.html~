<div style="position:absolute;left:311.24px;top:269.52px" class="cls_015"><span class="cls_015">of </span><span class="cls_051">n/op</span><span class="cls_015"> not </span><span class="cls_051">v</span><span class="cls_015">ing</span></div>
<div style="position:absolute;left:144.71px;top:282.11px" class="cls_014"><span class="cls_014">They're sick of me crying.</span></div>
<div style="position:absolute;left:311.33px;top:282.11px" class="cls_014"><span class="cls_014">He was tired of them not being good.</span></div>
<div style="position:absolute;left:36.72px;top:307.50px" class="cls_015"><span class="cls_015">AGAINST </span><span class="cls_051">v</span><span class="cls_015">ING</span></div>
<div style="position:absolute;left:144.75px;top:307.50px" class="cls_015"><span class="cls_015">against </span><span class="cls_051">n/op v</span><span class="cls_015">ing</span></div>
<div style="position:absolute;left:311.23px;top:307.50px" class="cls_015"><span class="cls_015">against </span><span class="cls_051">n/op</span><span class="cls_015">  not </span><span class="cls_051">v</span><span class="cls_015">ing</span></div>
