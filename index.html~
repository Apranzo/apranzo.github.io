<div style="position:absolute;left:36.72px;top:345.42px" class="cls_015"><span class="cls_015">ON </span><span class="cls_051">v</span><span class="cls_015">ING</span></div>
<div style="position:absolute;left:144.71px;top:345.42px" class="cls_015"><span class="cls_015">on </span><span class="cls_051">n/op v</span><span class="cls_015">ing</span></div>
<div style="position:absolute;left:311.24px;top:345.42px" class="cls_015"><span class="cls_015">on </span><span class="cls_051">n/op</span><span class="cls_015"> not </span><span class="cls_051">v</span><span class="cls_015">ing</span></div>
